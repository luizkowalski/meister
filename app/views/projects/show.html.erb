<%= turbo_stream_from @project %>

<%= render "components/display_mode" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-8">
    <a href="<%= projects_path %>" class="text-blue-600 hover:text-blue-800 mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
    </a>
    <h1 class="text-3xl font-bold text-gray-800"><%= @project.name %></h1>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-800">Project Details</h2>
        <span class="text-sm text-gray-500">Created <%= time_ago_in_words(@project.created_at) %> ago</span>
      </div>

      <div class="border-t border-gray-200 pt-4">
        <h3 class="text-lg font-medium text-gray-800 mb-4">Tasks</h3>
        <div class="<%= class_names("space-y-4" => display_list?, "grid grid-cols-5 gap-4" => display_grid?) %>">
          <% @project.tasks.order(created_at: :desc).each do |task| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
              <div class="p-4">
                <h4 class="font-medium text-gray-800 mb-2"><%= task.name %></h4>
                <div class="flex justify-end mt-3">
                  <span class="text-xs text-gray-500"><%= time_ago_in_words(task.created_at) %> ago</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
