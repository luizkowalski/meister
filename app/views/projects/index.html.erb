<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Projects</h1>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <div class="flex justify-between items-start">
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= project.name %></h2>
          </div>

          <div class="mt-4 flex justify-between items-center">
            <div class="text-sm text-gray-500">
              <%= pluralize(project.task_count, 'task') %>
            </div>
            <div class="flex space-x-2">
              <a href="<%= project_path(project) %>" class="text-blue-600 hover:text-blue-800 font-medium text-sm">View Tasks</a>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 px-6 py-4">
          <div class="flex justify-between items-center">
            <span class="text-xs text-gray-500">Created <%= time_ago_in_words(project.created_at) %> ago</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
